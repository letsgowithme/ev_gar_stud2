<hr class="text-light fs-4">
<div class="comments_all_block text-center d-flex flex-wrap justify-content-between ">
	{% for comment in comments %}
		{% if comment.isApproved %}

			<div class="comment bg-light mb-4 pt-3 rounded border-bottom ms-2" style="width: 400px; padding: 10px;">
				<div>
					<div class="block p-6">
						<div class="col-md-12">
							<h5 class="text-dark">{{ comment.subject|raw }}</h5>
							<p class="text-dark fs-5 mb-3">
								{{ comment.content|raw }}
							</p>
							<p class="text-dark mb-3 comm_all_txt">Note :
								{{ comment.mark }}/5</p>
							<p class="text-dark mb-3 comm_all_txt">{{ comment.commentator }}</p>

						</div>
					</div>
				</div>
			</div>


		{% endif %}
	{% endfor %}
</div>
<hr class="text-light fs-4">

