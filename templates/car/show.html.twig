{% extends 'base.html.twig' %}

{% block title %}Voiture détails
{% endblock %}

{% block body %}
	{# <div style="height: 50px; z-index: -3;">{% include "partials/_show_bg.html.twig" %}
		</div> #}
	{% for message in app.flashes('success') %}
		<div class="alert alert-success">
			{{ message }}
		</div>
	{% endfor %}

    

	<main class="container bg-dark text-center">
    <section class="row" >
    <div class="col-12" >
		<h1 class="mt-4 mb-4 text-light">{{ car.title }}</h1>
        </div>
		 <div class="col-6">
			<div id="carouselExampleIndicators" class="carousel slide " data-bs-ride="carousel">
                    <div class="carousel-indicators">
                        {% for iteration in 1..car.images|length %}
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="{{ iteration - 1 }}" {{ (loop.first ) ?'class="active" aria-current="true"' : '' }} aria-label="Slide {{ iteration }}"></button>
                        {% endfor %}
                    </div>
                    <div class="carousel-inner">
                        {% for image in car.images %}
                            <div class="carousel-item {{ (loop.first ) ? 'active' : '' }}  text-center">
                                <img src="{{ asset('assets/uploads/carPosts/mini/600x440-') ~ image.name }}" class="d-block w-100" alt="{{ car.title }}">
                            </div>
                        {% endfor %}
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>

		<h5 class="mt-3 text-light show_block_titles">Année:
			<span class="badge bg-primary mt-1">{{ car.year |raw }}</span>
		</h5>

		<h5 class="mt-3 text-light">Kilométrage
			<span class="badge bg-primary mt-1">{{ car.km }}
				km</span>
		</h5>


		<h5 class="mt-3 text-light">Type de carburant
			<span class="badge bg-primary mt-1">
				{{ car.fuelType  }}</span>
		</h5>


		<h5 class="mt-3 text-light">Prix
			<span class="badge bg-primary mt-1">
				{{ car.price }}
				€</span>
		</h5>

		{# <h5 class="mt-3 text-light">Modele:
				</h5>
				{% for modele in car.modele %}
					<span class="badge bg-primary mb-4 fs-6">{{ modele.marque }}</span>
				
				<div style="background-color:  #87dbed; padding: 10px;" class="rounded">
		        {% endfor %} #}
		<h5 class="mt-3 text-light">Couleur
			<span class="badge bg-primary mt-1">
				{{ car.color }}
			</span>
		</h5>

		<button type="button" class="btn">
			<a href="{{ path('car.edit', {'id': car.id}) }}" class="fs-4 py-2 fw-bold">Modifier</a>
		</button>
	</div>

	<button type="button" class="btn">
		<a href="{{ path('car.index') }}" class="fs-4 py-2">Vers les annonces</a>
	</button>
    </section>
</main>

{% endblock %}
